<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ramapo.akuhles.mazenavigator.GameView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Keyboard"
        android:id="@+id/bShowKeyboard"
        android:layout_gravity="right"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve Maze"
        android:id="@+id/bSolveMaze"
        android:layout_alignTop="@+id/bShowKeyboard"
        android:layout_toRightOf="@+id/bShowKeyboard"
        android:layout_toEndOf="@+id/bShowKeyboard"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp" />

</RelativeLayout>